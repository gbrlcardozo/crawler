<tbody>
  <div class="container">
    <h1>Crawler List</h1>

    <%= search_form_for @q do |f| %>
        <%= f.label :source_or_title_or_tags_cont %>
        <%= f.search_field :source_or_title_or_tags_cont %>
      <%= f.submit %>
    <% end %>
    <br/>
    
<div>
  <a href="<%= root_url %>cultures/new">New Culture</a>
</div>
<div>
  <a href="<%= root_url %>socials/new">New Social</a>
</div>

<br>

  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Source</th>
        <th>URL</th>
        <th>Title</th>
        <th>Tags</th>
        <th>Collect</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @crawlers.each do |crawler| %>
      <tr>
        <td><%= crawler.source %></td>
        <td>
          <a href="<%= crawler.url %>" target="_blank"><%= crawler.url %></a>
        </td>
        <td><%= crawler.title %></td>
        <td>
          <%= crawler.tags.to_s == "" ? '---' :  crawler.tags %>
        </td>
        <td><%= crawler.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', crawler %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="pagination" style="display: flex; justify-content: center">
  <%= will_paginate @pag %>
</div>
</tbody>
